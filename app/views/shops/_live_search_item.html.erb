<li class="search-item">
  <%= link_to shop do %>
    <div class="col-xs-12 col-sm-3 col-md-3">
      <%= image_tag shop.avatar.url, class: "img-responsive" %>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-9">
      <div class="row">
        <strong><%= shop.name %></strong>
      </div>
      <div class="row">
        <div class="col-md-8">
          <%= link_to shop.owner do %>
            <%= t "livesearch.shop_owner", name: shop.owner_name,
              status: shop.status_text.camelize %>
          <% end %>
        </div>
        <div class="col-md-4">
          <%= link_to "" do %>
            <%= t "livesearch.shop_products",
              number: shop.products.size %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  <% end %>
</li>
