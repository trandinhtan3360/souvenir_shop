<div class="wrapper">
  <div class="main-panel">
    <nav class="navbar navbar-default navbar-fixed">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#"></a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-left">
            <li>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-dashboard"></i>
                <p class="hidden-lg hidden-md"></p>
              </a>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <p><%= link_to t(".account"), "#" %></p>
            </li>
            <% if current_user.admin? %>
              <li class="dropdown">
                <p>
                 <%= link_to t(".admin"), "#" %>
                </p>
                <ul class="dropdown-menu">
                  <li>
                    <%=link_to t(".product"), new_admin_product_path %>
                  </li>
                  <li>
                    <%=link_to t(".user"), admin_users_path %>
                  </li>
                  <li>
                    <%=link_to t(".category"), admin_categories_path %>
                  </li>
                </ul>
              </li>
            <% end %>
            <% if logged_in? %>
              <li>
                <%=link_to t(".logout"), logout_path, method: :delete %>
              </li>
            <% end %>
            <li class="separator hidden-lg hidden-md"></li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-10">
            <div class="card">
              <div class="header">
                <h4 class="title"><%= t ".new_product" %></h4>
              </div>
              <div class="content">
                <%= form_for [:admin, @product], html:{:multipart:true} do |f| %>
                  <div class="row">
                    <div class="col-md-8">
                      <div class="form-group">
                        <%= f.label :name %>
                        <%= f.text_field :name, class: "form-control" %>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        <%= f.label :price %>
                        <%= f.text_field :price, class: "form-control" %>
                      </div>
                    </div>
                    <div class="col-md-12">
                      <div class="form-group">
                        <%= f.label :comment %>
                        <%= f.text_field :comment, class: "form-control" %>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <%= f.label :discount %>
                        <%= f.text_field :discount, class: "form-control" %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <div class="dropzone" id="image-upload">
                          <%= f.label :image %>
                          <%= f.file_field :image, class: "form-control" %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <%= f.submit t(".create_product"), class: "btn btn-primary" %>
                  <div class="clearfix"></div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
