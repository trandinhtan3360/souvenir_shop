<%= provide(:title, t ".edit") %>
<div class="wrap">
  <div class="h-bg">
    <div class="header">
      <div class="clear"></div>
      <div class="header-bot">
        <div class="logo">
          <%= image_tag("image/logo.png") %>
        </div>
        <div class="clear"></div>
      </div>
    </div>
    <h1 class="center"><%= t ".update_your_profile" %></h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @user do |f| %>
          <%= render "shared/error_messages" %>

          <%= f.label :username %>
          <%= f.text_field :username, class: "form-control" %>

          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>

          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>

          <%= f.label :password_confirmation, t ".Confirmation" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>

          <%= f.submit t(".save_changes"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
