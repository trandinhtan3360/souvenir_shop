<%= provide(:title, t ".home") %>
<div class="wrapper">
  <div class="main-panel">
    <nav class="navbar navbar-default navbar-fixed">
      <div class="container-fluid">
        <div class="navbar-header">
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <p><%= link_to t("account"), "#" %></p>
            </li>
            <% if current_user.admin? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <p>
                    <%= t ".admin" %>
                  </p>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%=link_to t(".product"), new_admin_product_path %>
                  </li>
                  <li>
                    <%=link_to t(".user"), admin_users_path %>
                  </li>
                  <li>
                    <%=link_to t(".category"), admin_categories_path %>
                  </li>
                </ul>
              </li>
            <% end %>
            <% if logged_in? %>
              <li>
                <%=link_to t(".log_out"), logout_path, method: :delete %>
              </li>
            <% end %>
            <li class="separator hidden-lg hidden-md"></li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="content">
      <div class="center"><%= t ".admin" %></div>
    </div>
  </div>
</div>
