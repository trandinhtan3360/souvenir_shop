<li class="search-item">
  <%= link_to product do %>
    <div class="col-xs-12 col-sm-3 col-md-3">
      <span>
        <%= image_tag product.image.url, class: "search-pic" %>
      </span>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-9">
      <div class="row">
        <strong><%= product.name %></strong>
      </div>
      <div class="row">
        <div class="col-md-8">
          <%= product.shop_name %>
        </div>
        <div class="col-md-4">
          <%= format_price product.price %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  <% end %>
</li>
